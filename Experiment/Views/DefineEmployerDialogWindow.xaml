                      x:Name="EmployersList"
                      SelectionMode="Single"
                      Grid.Row="1"
                      IsSynchronizedWithCurrentItem="True"
                      
                      SelectedValue="{Binding SelectedEmployer, Mode=TwoWay}"
                      VirtualizingPanel.IsVirtualizing="True"
                      TextElement.FontSize="17"
