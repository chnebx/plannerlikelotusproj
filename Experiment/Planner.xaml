        <CompositeCollection x:Key="CombinedCollection">
            <CollectionContainer Collection="{Binding Source={StaticResource DaysViewSource}}" />
            <CollectionContainer Collection="{Binding Source={StaticResource EventsViewSource}}" />
        </CompositeCollection>
